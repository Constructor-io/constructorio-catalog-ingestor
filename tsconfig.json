{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es6",
      "es2017.object"
    ],
    "module": "esnext",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "outDir": "dist",
    "target": "ES5",
    "types": [
      "node",
      "jest",
    ],
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
